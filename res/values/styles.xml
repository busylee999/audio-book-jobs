<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="android:Theme.Holo">
        <item name="android:listViewStyle">@style/CustomListView</item>
        <item name="android:textViewStyle">@style/CustomTextView</item>
        <item name="android:actionBarStyle">@style/CustomActionBarStyle</item>
        <!--<item name="android:seekBarStyle">@android:style/Widget.Holo.SeekBar</item>-->
        <item name="android:windowBackground">@color/black</item>
    </style>

    <style name="CustomActionBarStyle" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:choiceMode">none</item>
        <item name="android:background">@null</item>
    </style>

    <style name="CustomListView" parent="android:Widget.ListView">
        <item name="android:fastScrollEnabled">true</item>
    </style>

    <style name="CustomTextView" parent="android:Widget.TextView">
        <item name="android:typeface">sans</item>
        <item name="android:shadowColor">@android:color/darker_gray</item>
        <item name="android:shadowRadius">0.5</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
    </style>

</resources>